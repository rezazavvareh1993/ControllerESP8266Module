<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.controllerEsp8266Module">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/shian11"
        android:label="@string/app_name"
        android:roundIcon="@drawable/shian11"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.ConnectToModemActivity">

        </activity>
        <activity
            android:name=".Activities.EditDevicesNameActivity"
            android:parentActivityName=".Activities.DevicesActivity" />
        <activity
            android:name=".Activities.DevicesActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".Activities.EditRoomsNameActivity"
            android:parentActivityName=".Activities.RoomActivity" />
        <activity
            android:name=".Activities.RoomActivity"
            android:launchMode="singleTop" />
        <activity android:name=".Activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".Activities.AboutAsActivity" />
        <activity android:name=".Activities.SmartHouseActivity" />
        <activity
            android:name=".Activities.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.ControllerModuleActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>