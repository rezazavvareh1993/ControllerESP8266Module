<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.DevicesActivity"
    android:id="@+id/device_coordinate_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">
        <Spinner
            android:id="@+id/sp_type_rooms_devices"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:layout_gravity="right"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="16dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:cursorVisible="false"
            android:focusable="false"
            android:gravity="right"
            android:hint="پذیرایی"
            android:inputType="phone"
            android:padding="13dp"
            android:textColor="#000"
            android:textColorHint="@color/cardview_dark_background"
            android:textSize="14sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:gravity="center"
            android:text="اضافه کردن وسیله"
            android:textSize="24sp"
            android:textColor="#000"/>



    </LinearLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recycler_rooms_device"
        android:layout_gravity="center"
        tools:listitem="@layout/devices_list_item">

    </androidx.recyclerview.widget.RecyclerView>


</LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
